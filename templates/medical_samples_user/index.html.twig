{% extends 'base.html.twig' %}

{% block title %}Muestras Médicas | UMAD {% endblock %}

{% block body %}
<style>
.dot {
  height: 6px;
  width: 6px;
  background-color: grey;
  border-radius: 50%;
  display: inline-block;
}
</style>
  <div class="gradient-bg">
    <div class="container w-100 h-100">
      <div class="w-100 h-100 d-flex flex-column mt-3">
        <div class="d-flex justify-content-between align-items-center title-header-container">
          <div class="d-flex flex-column gap-1">
            <h3 class="mb-0">Muestras médicas</h3>
            <p class="text-secondary mb-0 subtext-header">Listado de muestras médicas pertenecientes al centro de salud: <span class="text-dark">{{app.user.healthCenter}}</span>.</p>
          </div>
          <a href="{{ path('app_medical_samples_new') }}" style="font-size:.95rem" class="btn btn-primary p-1"><i class="fa-solid fa-plus"></i> Muestra Medica</a>
        </div>
        <div class="table-responsive bg-white rounded-2 border medical-table">
          <table class="table table-hover mw-100">
            <thead>
              <tr class="custom-table-header">
                <th scope="col">#</th>
                <th scope="col">Stock</th>
                <th scope="col">Vencimiento</th>
                <th scope="col">Fecha de carga</th>
                <th scope="col">Fecha Modificación</th>
                <th scope="col">Producto</th>
                <th scope="col" class="text-center">Acciones</th>
              </tr>
            </thead>
            <tbody >
               {% for sample in pagination %} 
                <tr class="table-body-text" id="row-{{loop.index}}">
                  <td class="fw-light" id="sample-{{ loop.index }}" data-sample-id="{{sample.id}}">{{ sample.id}}</td>
                  <td class="fw-light" id="stock-{{loop.index}}" data-stock={{sample.stock}}>{{ sample.stock }}</td>
                  <td class="fw-light">{{ sample.expirationDate | date("d/m/Y") }}</td>
                  <td class="fw-light">{{ sample.createdAt | date("d/m/Y") }}</td>
                  <td class="fw-light">{{ sample.modifiedAt ? (date("d/m/Y")) : 'No hubo modificación.' }}</td>
                  <td class="fw-light">{{ sample.product.name }}</td>
                  <td class="d-flex justify-content-center gap-1" id="actions-{{loop.index}}">
                    <button class="btn btn-success p-0 btn-sm px-1 editBtn" id="editBtn-{{loop.index}}" data-target="stock-{{loop.index}}" onClick="showEdit({{loop.index}})" style="font-size: .8rem">editar</button>
                    <form action="{{path('deleteSample', { 'id': sample.id })}}" method="POST">
                      <button class="btn btn-danger p-0 btn-sm px-1" type="submit" style="font-size: .8rem"><i class="fa fa-trash"></i></button>
                    </form>
                  </td>
                </tr>
               {% endfor %} 
            </tbody>
          </table>
            
        </div>
        <div class="d-flex justify-content-between gap-2 pt-3">
          <div class="d-flex flex-column text-secondary pb-0 footer-text">
            <div class="d-flex align-items-center gap-2">
              <i class="dot"></i>
              <p class="mb-0">Ayuda:</p>
            </div>
            <p class="mb-0 ms-3">- La administración de las muestras médicas (stock y productos) es responsabilidad del encargado del centro.</p>
            {# <p class="mb-0 ms-3">- Para eliminar una muestra médica, contactá con el encargado del centro.</p> #}
          </div>
          <div>
           {{knp_pagination_render(pagination)}}
          </div>
        </div>
      </div>
    </div>
  </div>
