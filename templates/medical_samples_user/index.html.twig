  function showEdit(index) {
    const tdactions = document.querySelector(`#actions-${index}`);
    const stockInput = document.querySelector(`#stock-${index}`);
    const stockValue = document.querySelector(`#stock-${index}`).getAttribute('data-stock');
    const sampleId = document.querySelector(`#sample-${index}`).getAttribute('data-sample-id');
    
    stockInput.innerHTML = `<form class="d-flex gap-1" method="POST" action="muestra/${sampleId}/update"><input type="number" placeholder="${stockValue}" name="stockQuantity" class="d-flex p-0 border-0" style="outline: 1px solid gray"></input><button type="submit" class="btn btn-primary p-0 btn-sm px-1" style="font-size: .8rem"><i class="fa-solid fa-check"></i></button></form>`;
    tdactions.innerHTML = `<button class="btn btn-success p-0 btn-sm px-1 editBtn" id="editBtn-${index}" data-target="stock-${index}" onClick="undoEdit(${index})" style="font-size: .8rem">cancelar</button><form action="muestra/${sampleId}/delete" method="POST"> <button class="btn btn-danger p-0 btn-sm px-1" type="submit" style="font-size: .8rem"><i class="fa fa-trash"></i></button> </form>`
  }
  function undoEdit(index){
    const tdactions = document.querySelector(`#actions-${index}`);
    const stockInput = document.querySelector(`#stock-${index}`);
    const stockValue = document.querySelector(`#stock-${index}`).getAttribute('data-stock');
    const sampleId = document.querySelector(`#sample-${index}`).getAttribute('data-sample-id');

    stockInput.innerHTML = `<td class="fw-light" id="stock-${index}" data-stock=${stockValue}>${stockValue}</td>`;
    tdactions.innerHTML = `<button class="btn btn-success p-0 btn-sm px-1 editBtn" id="editBtn-${index}" data-target="stock-${index}" onClick="showEdit(${index})" style="font-size: .8rem">editar</button><form action="muestra/${sampleId}/delete" method="POST"> <button class="btn btn-danger p-0 btn-sm px-1" type="submit" style="font-size: .8rem"><i class="fa fa-trash"></i></button> </form>`
  }
  </script>
