{% extends '@EasyAdmin/page/content.html.twig' %}

{% block main %}
  <form id="elform" action="" method="post">
    <div class="d-flex justify-content-between align-items-center w-100 mb-4">
      <h1>Crear producto</h1>
      <button type="submit" class="btn btn-primary">Guardar producto</button>
    </div>
    {% if message is defined %}
      {% if message %}
        <div class="my-2" style="background-color: green; border-radius: .25rem; padding:.5rem; color:white">
          <p class="mb-0">
            El producto se creó correctamente.
          </p>
        </div>
      {% else %}
        <div class="my-2" style="background-color: red; border-radius: .25rem; padding:.5rem; color:white">
          <p class="mb-0">
            Ya existe un producto con ese nombre.
          </p>
        </div>
      {% endif %}
    {% endif %}
    <div class="mb-3 d-flex flex-column w-25">
      {# <label for="user" class="form-label d-block">Nombre del producto<span class="text-danger">*</span></label>
      <select name="user" class="p-1 rounded-1" id="user">
        <option value="" style="color:gray"></option>
        {% for user in users %}
          <option value="{{user.id}}">{{user.name}}</option>
        {% endfor %}
      </select> #}
      <label for="product" class="mb-2">Nombre del producto<span class="text-danger">*</span></label>
      <input type="text" id="product" name="product">
    </div>
    <div class="mb-3 d-flex flex-column w-25">
      <label for="description" class="mb-2">Descripción del producto<span class="text-danger">*</span></label>
      <textarea type="text" maxLength="255" rows="3" id="description" name="description"></textarea>
    </div>
    {# <label for="createdAt" class="d-block">Fecha de ingreso</label>
    <input type="datetime-local" name="fechaIngreso" id="createdAt"> #}
  </form>
{% endblock %}