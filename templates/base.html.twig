                      <img id="arrow-direction-image" src="https://img.icons8.com/external-those-icons-fill-those-icons/256/external-down-arrows-those-icons-fill-those-icons-1.png" height="12" alt="">
                    </div>
                      <div class="dropdown-menu-styled p-0" style="border-left: 1px solid #e5e5e5; border-bottom: 1px solid #e5e5e5; border-right: 1px solid #e5e5e5;">
                        <a class="dropdown-item px-3 py-2 border-bottom" href="/muestras-medicas">Ver muestras médicas</a>
                        <a class="dropdown-item px-3 py-2" href="/muestras-medicas/nuevo">Agregar Muestra médica</a>
                      </div>
                    </li>
                    <li class="mt-1">
                      <a class="text-decoration-none  nav-item-styled pe-1 mb-0" href="/micentro">Big Tonny Supplies</a>
                    </li>
                    <li class="dropdown profile-div">
                      <div class="border border-dark rounded-circle opacity-75" style="cursor: pointer; padding:2px;">
                        <i class="fa-solid fa-user" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false" style="padding: 6px 7px;"></i>
                      </div>
                      <div class="dropdown-menu-styled p-0 user-profile-dropdown" style="border-left: 1px solid #e5e5e5; border-bottom: 1px solid #e5e5e5; border-right: 1px solid #e5e5e5; margin-top:.5rem; left: -45px; padding-top: .5rem;" aria-labelledby="dropdownMenuButton1">
                        <a class="dropdown-item px-3 py-2" href="/perfil">Editar Perfil</a>
                        <a class="dropdown-item px-3 py-2" href="/logout">Cerrar sesión</a>
                      </div>
                    </li>
                  </ul>
                </div>
            </div>
          </nav>
        {% endblock %}
        {% block body %}
        {% endblock %}
      </div>
